<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context=".NoteViewActivity">
    <TextView android:id="@+id/noteViewActivity_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Title"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:id="@+id/noteViewActivity_tv_creationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: 29.09.2019"
        app:layout_constraintTop_toBottomOf="@id/noteViewActivity_tv_title"/>
    <TextView android:id="@+id/noteViewActivity_tv_updateDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: 29.09.2019"
        app:layout_constraintTop_toBottomOf="@id/noteViewActivity_tv_creationDate"/>

    <TextView android:id="@+id/noteViewActivity_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/noteViewActivity_tv_updateDate"/>

    <Button
        android:id="@+id/fab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/ic_home"
         />
    <Button
        android:id="@+id/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/noteViewActivity_tv_content"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/ic_edit"
        />

    <Button
        android:id="@+id/delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/edit"
        app:layout_constraintEnd_toStartOf="@+id/fab"
        app:layout_constraintStart_toEndOf="@+id/edit"
        app:layout_constraintTop_toTopOf="@+id/edit" />


</androidx.constraintlayout.widget.ConstraintLayout>